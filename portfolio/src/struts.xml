<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>
	<package name="login" namespace="/" extends="struts-default">
		<action name="login" class="org.ajay.singh.action.loginAction">
			<result name="success">/cms/contentmanager.jsp</result>
			<result name="login">/cms/login.jsp</result>
		</action>
	</package>
	
	<package name="contentmanager" namespace="/" extends="struts-default">
		<action name="contentmanager">
			<result>/cms/contentmanager.jsp</result>
		</action>
	</package>
</struts>